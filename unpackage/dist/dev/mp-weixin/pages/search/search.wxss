.search .search-search {
  display: flex;
  height: 70rpx;
  line-height: 70rpx;
  background: #f7f7f7;
  border-radius: 70rpx;
  margin: 70rpx 30rpx 30rpx 30rpx;
}
.search .search-search text {
  margin: 0 26rpx 0 26rpx;
  font-size: 26rpx;
}
.search .search-search input {
  flex: 1;
  font-size: 28rpx;
  margin-top: 12rpx;
}
.search .search-history {
  margin: 0 30rpx;
  font-size: 26rpx;
}
.search .search-history .search-history-head {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.search .search-history .search-history-list {
  display: flex;
  flex-wrap: wrap;
}
.search .search-history .search-history-list view {
  background-color: #f7f7f7;
  padding: 16rpx 26rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 40rpx;
}
.search .search-hot {
  margin: 20rpx 30rpx;
  font-size: 26rpx;
}
.search .search-hot .search-hot-head {
  margin-bottom: 36rpx;
}
.search .search-hot .search-hot-item {
  display: flex;
  margin-bottom: 58rpx;
  align-items: center;
}
.search .search-hot .search-hot-item .search-hot-left {
  color: #fb2222;
  width: 60rpx;
  margin-left: 8rpx;
}
.search .search-hot .search-hot-item .search-hot-middle {
  flex: 1;
}
.search .search-hot .search-hot-item .search-hot-middle view:nth-child(1) {
  font-size: 30rpx;
  color: #000;
  margin-right: 10rpx;
}
.search .search-hot .search-hot-item .search-hot-middle view:nth-child(2) {
  font-size: 26rpx;
  color: #878787;
}
.search .search-hot .search-hot-item .search-hot-middle ._img {
  width: 48rpx;
  height: 22rpx;
  margin-left: 10rpx;
}
.search .search-hot .search-hot-item .search-hot-count {
  color: #878787;
}
.search .search-result {
  border-top: 2rpx #e4e4e4 solid;
  padding: 30rpx;
}
.search .search-result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 2rpx #e4e4e4 solid;
}
.search .search-result-word view:nth-child(1) {
  font-size: 28rpx;
  color: #235790;
  margin-bottom: 12rpx;
}
.search .search-result-word view:nth-child(2) {
  font-size: 22rpx;
  color: #898989;
}
.search .search-result-item text {
  font-size: 50rpx;
}
.search .search-suggest {
  border-top: 2rpx #e4e4e4 solid;
  padding: 30rpx;
  font-size: 26rpx;
}
.search .search-suggest-head {
  color: #4574a5;
  margin-bottom: 74rpx;
}
.search .search-suggest-item {
  color: #5d5d5d;
  margin-bottom: 74rpx;
}
.search .search-suggest-item text {
  color: #bdbdbd;
  margin-right: 28rpx;
  position: relative;
  top: 2rpx;
}

